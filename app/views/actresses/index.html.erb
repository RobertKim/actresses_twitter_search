

<body>
    <div class="pure-g">
        <div class="pure-u-1-3">
            <!--
            By default, grid units don't have any margin/padding.
            If you want to add these, put them in a child container.
            -->
            <p>Thirds</p>
        </div>

        <div class="pure-u-1-3">
            <h1>American Film Actresses</h1>
<p>
  To download the database to CSV, click
  <%= link_to 'here', actresses_path(format: "csv") %>
</p>
<p>
  Enter a Name to Search the Database:
  <%= form_tag actresses_path, :method => 'get' do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
</p>
<br>

<table>
  <thead>
    <tr>
      <th>Actress</th>
      <th>Twitter URL</th>
    </tr>
  </thead>

  <tbody>
    <% @actresses.each do |actress| %>
      <tr>
        <td><%= link_to actress.actress, actress_path(actress) %></td>
        <% if actress.twitter_url.present? %>
          <td><%= link_to actress.twitter_url, actress.twitter_url %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
        </div>

        <div class="pure-u-1-3">
            <p>Thirds</p>
        </div>
    </div>
</body>
